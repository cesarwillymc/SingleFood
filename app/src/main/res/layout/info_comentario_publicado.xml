<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/drawable_15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/capsule_rest_infor"
    android:id="@+id/info_restaurant_frame_publicado"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/drawable_15dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_comentarios_info_restaurant_text_comentario_titulo"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="Exelente, Recomendable"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rv_comentarios_info_restaurant_text_fecha"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="Setiembre 02, 2019"
                android:textSize="10sp"
                android:alpha="0.7"
                android:textStyle="italic" />
        </LinearLayout>



        <TextView
            android:id="@+id/rv_comentarios_info_restaurant_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Me fascina la combinaciÃ³n del pollo con las
papas fritas y tomates dorados, excelente. la Nacional"
            android:alpha="0.7"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rv_comentarios_info_restaurant_text_user"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="left|center"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:gravity="center"
                android:text="Oscar Rodriguez"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rv_comentarios_text_comentatio_estatico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:text="-Publicado"
                android:textSize="13sp"
                android:alpha="0.7"/>
        </LinearLayout>


    </LinearLayout>




</FrameLayout>