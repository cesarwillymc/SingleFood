<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".models.informacion_platillos">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_info"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:background="@color/gradientStop"
        android:theme="@style/AppTheme.new">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/collapse"
            app:contentScrim="?attr/colorAccent"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="@style/expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/image_view_info_heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/design_default_color_primary"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/todo" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_info"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"  >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_anchor="@id/appbar_info"
                    app:layout_anchorGravity="top|right|end"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnfLike"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ico_like"
                        app:backgroundTint="@color/com_facebook_button_background_color_focused"
                        app:fabSize="normal"
                        app:maxImageSize="35dp"
                        tools:targetApi="o" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnfComment"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:src="@drawable/ico_comment"
                        app:backgroundTint="@color/com_facebook_button_background_color_focused"
                        app:fabSize="normal"
                        app:maxImageSize="35dp"
                        tools:targetApi="o" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <!--<include android:id="@+id/toolbar_general"
                layout="@layout/layout_toolbar"/
                <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
